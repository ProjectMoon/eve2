<ivysettings>
	<property name="local-maven2-pattern"
		value="${user.home}/.m2/repository/[organisation]/[module]/[revision]/[module]-[revision].pom"
		override="false" />

	<settings defaultResolver="chain-1" />

        <resolvers>
		<chain name="chain-1">
	        	<ibiblio name="reflections-repo" root="http://reflections.googlecode.com/svn/repo/" m2compatible="true" />
			<filesystem name="mvn-local" m2compatible="true" local="true">
				<ivy pattern="${user.home}/.m2/repository/[organisation]/[module]/[revision]/[module]-[revision].pom" />
				<artifact pattern="${user.home}/.m2/repository/[organisation]/[module]/[revision]/[module]-[revision].[ext]" />
			</filesystem>
	        	<ibiblio name="mvn-public" m2compatible="true" />
		</chain>
        </resolvers>
        
<!--
        <modules>
        	<module organisation="org.reflections" resolver="reflections-repo" />

		<module organisation="org.apache.commons" name="commons-javaflow" resolver="mvn-local" />
        	
        	<module resolver="mvn-public" />
        </modules>
-->
</ivysettings>
